# Shared Postgres password (used by docker-compose and backend)
POSTGRES_PASSWORD=secret

# Database
DATABASE_URL=postgres://portal:secret@postgres:5432/portal_db

# Grafana
GRAFANA_INTERNAL_URL=http://grafana:3000

# Grafana (deterministic â€” matches provisioning file)
GRAFANA_DATASOURCE_UID=portal-postgres-ds
GRAFANA_ADMIN_PASSWORD=admin

# NocoDB
NOCODB_INTERNAL_URL=http://nocodb:8090

# NocoDB bootstrap owner
NOCODB_OWNER_EMAIL=admin@portal.local
NOCODB_OWNER_PASSWORD=Portal1234!

# These will be auto-populated by the bootstrapper in Docker,
# but keep placeholders for local dev:
GRAFANA_SERVICE_ACCOUNT_TOKEN=glsa_xxxxxxxxxxxx
NOCODB_API_TOKEN=xxxxxxxxxxxxx

# Auth
SESSION_SECRET=deadbeefdeadbeefdeadbeefdeadbeefdeadbeefdeadbeefdeadbeefdeadbeef
SESSION_TTL_HOURS=168          # 1 week

# App
RUST_LOG=info,backend=debug
BIND_ADDRESS=0.0.0.0:8080
SQLX_OFFLINE=true
PORTAL_ADMIN_USERNAME=admin
PORTAL_ADMIN_PASSWORD=test1234

# Host port mappings (change to avoid conflicts with other services)
PORTAL_PORT=8080
POSTGRES_PORT=5432
GRAFANA_PORT=3000
NOCODB_PORT=8090